<%= content_tag @tag, aria: { label: t('blacklight.tools.title') }, class: @classes do %>
  <% actions.each do |action| %>
    <% if @wrapping_tag %>
      <%= content_tag(@wrapping_tag, class: Array(@wrapping_classes) + [action.key]) do %>
        <%= action %>
      <% end %>
    <% else %>
      <%= action %>
    <% end %>
  <% end %>
<% end %>

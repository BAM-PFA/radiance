<!-- This is from https://leafletjs.com/examples/quick-start/ -->
<div id="map" style="width: 800px; height: 500px"></div>
    <script>
      var map = L.map("map").setView([<%= latitude.to_f %>, <%= longitude.to_f %>], 10);
      L.tileLayer("https://tile.openstreetmap.org/{z}/{x}/{y}.png", {
        maxZoom: 19,
        attribution:
          '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>',
      }).addTo(map);
      var marker = L.marker([<%= latitude.to_f %>, <%= longitude.to_f %>]).addTo(map);
    </script>
 </div>